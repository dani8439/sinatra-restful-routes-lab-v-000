<h1>Recipes: </h1>

<% @recipes.each do |recipe| %>
<div class="post">
  <p>Recipe: <%= recipe.name %></p><br>
  <p>Ingredients <%= recipe.ingredients %></p></br>
  <p>Cook Time: <%= recipe.cook_time %> minutes </p></br>
</div> <br>
<% end %>

<% @recipes.each do |recipe|%>
  <a href="/recipes/<%= recipe.id %>">Name: <%= recipe.name %></a>
  Ingredients: <%= recipe.ingredients %>
  Cook time <%= recipe.cook_time %>
<% end %>
